<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.eventregapp.LoginController" style="-fx-background-color: #f8f9fa;">
    <center>
        <VBox alignment="CENTER" spacing="20.0" maxWidth="Infinity" maxHeight="Infinity">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>
            
            <!-- Title -->
            <VBox alignment="CENTER" spacing="4.0">
                <Label text="INVENTE'25" textAlignment="CENTER" style="-fx-text-fill: #1b3a57;">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>
                <Label text="SSN College of Engineering" textAlignment="CENTER" style="-fx-text-fill: #5c6b7a;">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                <Label text="Please login to continue" textAlignment="CENTER" style="-fx-text-fill: #6c757d;">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
            </VBox>
            
            <!-- Login Form -->
            <VBox spacing="15.0" maxWidth="400.0" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                <Label text="Login" textAlignment="CENTER" style="-fx-text-fill: #1b3a57;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                
                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="80.0" prefWidth="100.0"/>
                        <ColumnConstraints minWidth="250.0" prefWidth="280.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="32.0"/>
                        <RowConstraints minHeight="32.0"/>
                    </rowConstraints>
                    
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #495057;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter your email" prefWidth="280.0"
                              style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 4; -fx-padding: 8; -fx-font-size: 12px;"/>
                    
                    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #495057;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter your password" prefWidth="280.0"
                                  style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 4; -fx-padding: 8; -fx-font-size: 12px;"/>
                </GridPane>
                
                <VBox spacing="10.0" alignment="CENTER">
                    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                           style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 6; -fx-font-size: 12px;">
                    </Button>
                    
                    <Button fx:id="signupButton" text="Create New Account" onAction="#handleSignup" 
                           style="-fx-background-color: #198754; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 6; -fx-font-size: 12px;">
                    </Button>
                </VBox>
                
                <Label fx:id="statusLabel" textFill="#dc3545" textAlignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 10px;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
